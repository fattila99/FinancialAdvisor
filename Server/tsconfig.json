{
  "compilerOptions": {
    "target": "es2016",                     /* Set the JavaScript language version for emitted JavaScript */
    "module": "commonjs",                   /* Specify the module code generated */
    "outDir": "./build/",                   /* Output folder for all emitted files */
    "rootDir": "./src",                     /* The root folder of your TypeScript files */
    "esModuleInterop": true,                /* Allow default imports from modules with no default export */
    "forceConsistentCasingInFileNames": true, /* Ensure consistent casing in import paths */
    "strict": true,                         /* Enable all strict type-checking options */
    "skipLibCheck": true,                   /* Skip type checking of all declaration files */
    "moduleResolution": "node",             /* Use Node.js module resolution */
    "resolveJsonModule": true,              /* Allow importing .json files */
    "noEmitOnError": true,                  /* Prevent emitting JavaScript files if there are errors */
    "sourceMap": true                       /* Generate sourcemaps for debugging */
  },
  "include": [
    "src/**/*.ts"                           /* Include all TypeScript files in the src folder */
  ]
}